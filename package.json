{
  "name": "vite-template-solid",
  "version": "0.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "vite",
    "dev:electron": "electron .",
    "compile:tailwind": "npx tailwindcss -i ./src/style/input.css -o ./src/style/output.css --watch",
    "build": "vite build",
    "build:vite": "vite build",
    "serve": "vite preview",
    "lint": "npx eslint src/**/*.tsx",
    "package-only": "electron-packager ./ SPark --platform=win32 --arch=x64 --icon=public/sp.ico --out=~/ --asar --app-version=0.0.1 --overwrite --extra-resource=public/",
    "package": "npm run build && npm run package-only"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cellular-automata": "^2.0.1",
    "electron": "^17.1.2",
    "electron-packager": "^17.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "less": "^4.2.0",
    "postcss-modules": "^6.0.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "solid-devtools": "^0.29.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.8.1",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^5.0.11",
    "vite-plugin-solid": "^2.8.2",
    "vite-plugin-solid-svg": "^0.8.1"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@solidjs/router": "^0.13.1",
    "@types/node": "^18.0.0",
    "solid-js": "^1.8.11",
    "sqlite3": "^5.1.2"
  },
  "iohook": {
    "targets": [
      "node-83",
      "electron-101"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "build": {
    "appId": "com.media.reader",
    "productName": "YReader",
    "extraResources": {
      "from": "public/",
      "to": "public/"
    },
    "extraFiles": {
      "from": "appConfig/",
      "to": "appConfig/"
    },
    "directories": {
      "output": "app"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://oss.poooli.com/download/app/desktop/"
      }
    ],
    "files": [
      "dist/",
      "main.js",
      "preload.js"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/photo_uninstall.ico",
      "installerHeaderIcon": "public/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "name"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "src/resources/icons/icon.icns"
    },
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/resources/icons/icon.ico"
    }
  }
}
